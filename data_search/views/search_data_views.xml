<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="search_view" model="ir.ui.view">
        <field name="name">search_view</field>
        <field name="model">search.data</field>
        <field name="arch" type="xml">
            <form string="Search Form">
                <sheet>
                    <group>
                        <field name="model_id"/>
                        <field name="field_id" domain="[('model_id', '=',model_id)]"/>
                        <field name="search_text"/>
                        <button name="action_search" string="search"
                                type="object"
                                class="btn-primary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="search_view_tree" model="ir.ui.view">
        <field name="name">search.data.view.tree</field>
        <field name="model">search.data</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="model_id"/>
                    <field name="field_id"/>
                </tree>
        </field>
    </record>
    <record id="search_form_action" model="ir.actions.act_window">
        <field name="name">Search</field>
        <field name="res_model">search.data</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
