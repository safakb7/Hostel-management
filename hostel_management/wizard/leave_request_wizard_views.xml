<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="leave_view_form" model="ir.ui.view">
       <field name="name">leave.view.form</field>
       <field name="model">leave.request.wizard</field>
       <field name="priority" eval="8"/>
       <field name="arch" type="xml">
           <form string="leave request report">
               <sheet>
               <group>
                   <field name="student_id"/>
                   <field name="room"/>
               </group>
                   <group>
                   <field name="start_date"/>
                   <field name="arrival_date"/>
               </group>
               </sheet>
               <footer>
                   <button name="cancel" string="Cancel" special="cancel"/>
               </footer>

           </form>
       </field>
   </record>
    <record id="student_wizard_action" model="ir.actions.act_window">
        <field name="name">Students Report</field>
        <field name="res_model">student.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
